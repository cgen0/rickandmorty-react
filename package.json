  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.26",
    "eslint": "8.27.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-tsdoc": "0.2.17",
    "jsdom": "^20.0.2",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "jsdom"
  }
